max-items 50
browser linkhandler.sh
#include /usr/share/doc/newsboat/contrib/colorschemes/inkpot
external-url-viewer "urlscan -dc -r 'linkhandler.sh {}'"

color listnormal white default
color listfocus default black protect
color listnormal_unread blue default bold
color listfocus_unread default default bold
color info blue black bold
color article blue default

highlight feedlist "---.*---" default default underline
